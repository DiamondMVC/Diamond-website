@:addPlaceHolder("title", i18n.getMessage(client, "HOME_TITLE"));

<div class="d-steps-bar">
  <div style="text-align: center; width: 100%;">
    <h3>@=i18n.getMessage(client, "GET_STARTED");</h3>
  </div>

  <div class="visible-md visible-lg">
    <div class="d-learn-button">
      <a href="/download"><i class="fa fa-download"></i> @=i18n.getMessage(client, "GET_STARTED_DOWNLOAD");</a>
    </div>

    <span style="font-size: 2em;">&#8594;</span>

    <div class="d-learn-button">
      <a href="/docs"><i class="fa fa-book"></i> @=i18n.getMessage(client, "GET_STARTED_LEARN");</a>
    </div>

    <span style="font-size: 2em;">&#8594;</span>

    <div class="d-learn-button">
      <a href="/tutorials/deployment"><i class="fa fa-cloud-upload"></i> @=i18n.getMessage(client, "GET_STARTED_DEPLOY");</a>
    </div>

    <span style="font-size: 2em;">&#8594;</span>

    <div class="d-learn-button">
      <a href="/contributing"><i class="fa fa-code-fork"></i> @=i18n.getMessage(client, "GET_STARTED_CONTRIBUTE");</a>
    </div>
  </div>

  <div class="visible-xs visible-sm">
